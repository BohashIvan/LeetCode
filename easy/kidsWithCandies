var kidsWithCandies = function (candies, extraCandies) {
	var emptyArr = [],
		i,
		size = candies.length;

	var maxNum = candies.reduce(function (a, b) {
		return Math.max(a, b);
	});

	for (i = 0; i < size; i += 1) {
		if (candies[i] + extraCandies >= maxNum) {
			emptyArr.push(true);
		} else {
			emptyArr.push(false);
		}
	}
	return emptyArr;
};

var candies = [2, 3, 5, 1, 3],
	extraCandies = 3;
console.log(kidsWithCandies(candies, extraCandies));
